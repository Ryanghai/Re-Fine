<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Exhibition</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.exhibition_id %></td>
        <td><%= review.title %></td>
        <td><%= review.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
